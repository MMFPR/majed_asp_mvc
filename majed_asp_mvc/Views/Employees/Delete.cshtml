@model Employee
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Employee</h1>

<form method="post" asp-action="Delete">

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <input asp-for="Gender" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Job" class="form-label"></label>
        <input asp-for="Job.Name" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Nationality" class="form-label"></label>
        <input asp-for="Nationality.Name" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" type="email" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control" type="tel" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Salary" class="form-label"></label>
        <input asp-for="Salary" class="form-control" type="number" step="0.01" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Department" class="form-label"></label>
        <input asp-for="Department.Name" class="form-control" disabled />
    </div>

    <button type="submit" class="btn btn-outline-primary">Save</button>
    <a asp-action="Index" class="btn btn-dark">Back</a>

</form>