@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employee";
}

<h1>Employee</h1>

<div class="container">

    <div class="text-end">

        <a asp-controller="Employees" asp-action="Create" class="btn btn-outline-primary">Add New</a>

    </div>


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Job</th>
                <th>Nationality</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Salary</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var emp in Model)
            {

                <tr>
                    <td>@emp.Id</td>
                    <td>@emp.Name</td>
                    <td>@emp.Gender</td>
                    @* <td>@(emp.Job?.Name ?? "Null")</td> *@
                    <td>@(emp.Job?.Name)</td>
                    <td>@(emp.Nationality?.Name ?? "Null")</td>
                    <td>@emp.Email</td>
                    <td>@emp.Phone</td>
                    <td>@emp.Address</td>
                    <td>@emp.Salary</td>
                    <td>@(emp.Department?.Name ?? "Null")</td>
                    <td>
                        <a asp-action="Edit" asp-route-Id="@emp.Id" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-Id="@emp.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>

            }


        </tbody>
    </table>
</div>